      <div id="forum_canvas">
        <h2>Discussion Topics<%= waiting_image %></h2>
        <ol class="list forum full">
          <%= render :partial => 'topics/topic', :collection => @topics %>
        </ol>
        <%- if logged_in? -%>
          <h3>Add a new topic</h3>
          <% form_for :topic, :url => forum_topics_path(@forum), :html => {:id => 'new_topic'} do |f| %>
            <div class="form_row">
              <%= f.text_field :name %>
              <%= submit_tag 'Submit', :class => "button" %>
            </div>
          <% end %>
        <%- end -%>
      </div>
