<%- unless @group.people.empty? -%>
  <h2>Group's member</h2>
  <ul class="grid contacts small">
    <%- @group.people.each do |contact| -%>
      <li class="vcard">
        <%= image_link(contact, :image_options => { :class => "photo fn" },
                                :link_options =>  { :class => "url" }) %>
      </li>
    <%- end -%>
    <li class="more">
      <%= link_to "All members &raquo;", members_group_path(@group) %>
    </li>
  </ul>
<%- end -%>