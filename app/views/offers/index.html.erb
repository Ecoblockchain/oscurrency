<%- column_div :type => :primary do -%>
  <h2>Offers</h2>
  <%- if @offers.empty? -%> 
    <h3 class="blankslate">No offers (yet!)</h3>
  <%- else -%>
  <ul class="list full">
    <%= will_paginate %>
    <%= render :partial => 'offer', :collection => @offers, :locals => {:short => true} %>
    <%= will_paginate %>
  </ul>
  <%- end -%>
<%- end -%>


<%- column_div :type => :secondary do -%>
  <%= render :partial => '/home/secondary_conditional' %>
<%- end -%>

