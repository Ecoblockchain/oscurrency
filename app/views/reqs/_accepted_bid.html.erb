<% if current_person?(accepted_bid.person) && accepted_bid.status_id < Bid::COMPLETED -%>
  <% form_for :bid, :url => req_bid_path(accepted_bid.req, accepted_bid), :html => {:method => :put} do |f| %>
    <%= f.hidden_field :status_id, :value => ( accepted_bid.status_id + 1 ) %>
    <%= f.submit( accepted_bid.status_id == Bid::ACCEPTED ? "Commit to request" : "Click if done" ) %>
  <% end -%>
<% end -%>
