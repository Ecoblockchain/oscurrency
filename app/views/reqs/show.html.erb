<%= render :partial => 'shared/jscript', :locals => { :jscript_file_name => 'bid_form' } %>

<% column_div :type => :primary do -%>
  <h2>Request</h2>
  <ul class="list full">
    <%= render :partial => @req %>
  </ul>
  <% if @req.active? %>
  <h2>Bids:</h2>
  <ul class="list full bids">
    <% if @req.bids.empty? -%>
        <h3 class="blankslate">No bids (yet!)</h3>
    <% else %>
      <%= render :partial => "/bids/bid", :collection => @req.bids %>
    <%- end -%>
  </ul>

 <% if logged_in? %>
    <% unless current_person?(@req.person) -%>
      <h2>New bid</h2>
      <% form_for :bid, :url => req_bids_path(@req), :html => {:id => 'new_bid'} do |f| %>
        <div class="form_row">
          <%= f.label :estimate %>
          <%= f.text_field :estimated_hours, :size => 2 %>&nbsp;<span class="small"><%= @req.unit %></span>
        </div>
        <div class="form_row">
          <%= f.label :expiration_date %>
          <%= f.text_field :expiration_date, :size => 8 %>
        </div>
        <div class="form_row">
          <%= f.label :private_message_to_requestor %>
          <%= f.text_area :private_message_to_requestor, :rows => 5 %>
        </div>
        <div class="form_row">
          <%= f.submit "Submit" %>
        </div>
      <% end %>
   <%- end -%>
   <%- end -%>
   <%- end -%>

<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => '/home/secondary_conditional' %>
<%- end -%>

