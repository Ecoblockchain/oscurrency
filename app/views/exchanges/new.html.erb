<%- column_div :type => :primary do -%>
  <h2>Enter Credit for <%= h @person.name %></h2>

  <%= error_messages_for :exchange %>

  <% form_for :exchange, :url => person_exchanges_path(@person) do |f| %>
    <% if params[:offer] %>
      <div class="form_row">
        <%= f.label :amount %>
        <%= f.text_field :amount, :size => 3, :value => @offer.price, :disabled => true %>&nbsp;<span id="units" class="small">hours</span>
      </div>
      <% fields_for :offer do |o| %>
        <div class="form_row">
          <%= o.label 'For:' %>
          <%= o.text_field :name, :value => @offer.name, :disabled => true %> &nbsp;&nbsp;&nbsp;&nbsp; <%= link_to "...or ask #{@offer.person.name} a question", @offer, :class => "meta" %>
        </div>
        <%= o.hidden_field :id %>
      <% end %>
    <% else %>
    <div class="form_row">
      <%= f.label :amount %>
      <%= f.text_field :amount, :size => 2 %>&nbsp;<%= collection_select( 'exchange', 'group_id', @groups, :id, :unit, { :include_blank => 'hours' } ) %>
    </div>

    <% fields_for :req do |r| %>
      <div class="form_row">
        <%= r.label 'Service provided' %>
        <%= r.text_field :name, :onclick => "this.value='';" %>
      </div>
    <% end %>
    <% end %>
    <div class="form_row">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
<%- end -%>
