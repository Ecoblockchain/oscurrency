<%- column_div :type => :primary do -%>
<h2>New service</h2>

  <%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <div class="form_row">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form_row">
    <%= f.submit "Create" %>
  </div>
<% end %>

<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'shared/minifeed' %>
<%- end -%>
