<%- column_div :type => :primary do -%>
<h2>Categories</h2>

<%- if @categories.empty? -%>
    <h3 class="blankslate">No categories (yet!)</h3>
<%- else -%>
    <ul class="list categories full">
      <%= render :partial => @categories %>
    </ul>
<%- end -%>

<%- end -%>

<%- column_div :type => :secondary do -%>
  <h2>Add new category</h2>
  <%= link_to "Add", new_category_path %>
<%- end -%>
